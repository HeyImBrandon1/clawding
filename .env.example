# Database — Neon serverless Postgres (required)
DATABASE_URL=postgresql://user:pass@host/db?sslmode=require

# Rate limiting + verification codes — Upstash Redis (required for production)
# Without Redis: rate limits fall back to in-memory, but email verification codes won't work
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token

# Email — Resend (required for claim verification + account recovery)
RESEND_API_KEY=re_your_api_key

# Admin — bearer token for ban/unban and future event management (required)
ADMIN_TOKEN=your-secret-admin-token

# Analytics — Google Analytics (optional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
